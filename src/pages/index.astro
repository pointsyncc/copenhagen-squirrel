---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import { MobileHeader } from "../components/ui/Navigation/MobileHeader.tsx";
import HeroSectionBanner from "../components/ui/Banners/HeroSectionBanner.astro";
---

<Layout title="Početna">
  <main>
    <!-- Hero Section -->
    <section class="hero_section">
      <HeroSectionBanner />
      <div
        class="relative bg_image h-full w-full bg-[url('/hero_section_image.png')] bg-cover bg-center bg-no-repeat rounded-psc"
      >
        <div class="h-2"></div>
        <MobileHeader client:load />
        <header
          class="hidden px-5 md:px-10 py-6 md:flex items-center justify-between gap-4"
        >
          <img
            src="/alfa_film_logo.png"
            alt="Alfa Film logo"
            class="max-w-[100px] md:max-w-[120px] 2xl:max-w-[160px]"
          />
          <nav class="hidden md:flex justify-center items-center gap-3">
            <ul
              class="bg-[#EFFAFF]/60 backdrop-blur-lg rounded-psc px-3.5 py-2 flex items-center gap-2"
            >
              <li>
                <a
                  href="#"
                  class="text-black text-sm font-medium bg-[#DEDEDE] rounded-[18px] px-[15px] py-[8px]"
                  >Početna</a
                >
              </li>
              <li>
                <a
                  href="#"
                  class="text-black text-sm font-medium bg-transparent transition-colors duration-300 ease-in-out hover:bg-white/30 rounded-[18px] px-[15px] py-[8px] whitespace-nowrap"
                  >Studio</a
                >
              </li>
              <li>
                <a
                  href="#"
                  class="text-black text-sm font-medium bg-transparent transition-colors duration-300 ease-in-out hover:bg-white/30 rounded-[18px] px-[15px] py-[8px] whitespace-nowrap"
                  >O nama</a
                >
              </li>
              <li>
                <a
                  href="#"
                  class="text-black text-sm font-medium bg-transparent transition-colors duration-300 ease-in-out hover:bg-white/30 rounded-[18px] px-[15px] py-[8px] whitespace-nowrap"
                  >Naš tim</a
                >
              </li>
              <li>
                <a
                  href="#"
                  class="text-black text-sm font-medium bg-transparent transition-colors duration-300 ease-in-out hover:bg-white/30 rounded-[18px] px-[15px] py-[8px] whitespace-nowrap"
                  >Kontakt</a
                >
              </li>
              <div class="h-6 bg-[#767676] w-[3px] rounded-full"></div>
              <a
                href="#"
                class="text-white flex items-center gap-4 justify-center text-sm font-medium bg-black rounded-psc px-[15px] py-[8px]"
                >Rezerviraj <svg
                  width="12"
                  height="11"
                  viewBox="0 0 14 13"
                  fill="none"
                  xmlns="http://www.w3.org/2000/svg"
                >
                  <path
                    d="M2 11.5L12 1.5M12 1.5V11.1M12 1.5H2.4"
                    stroke="white"
                    stroke-width="2.5"
                    stroke-linecap="round"
                    stroke-linejoin="round"></path>
                </svg>
              </a>
            </ul>
            <!-- Lang switcher -->
            <button
              class="flex items-center gap-4 px-[20px] py-[8px] transition-colors duration-500 ease-in-out bg-transparent rounded-psc hover:bg-[#36433F]/60 border-2 border-transparent hover:border-[#4C5A56] hover:backdrop-blur-lg"
            >
              <svg
                width="30"
                height="31"
                viewBox="0 0 30 31"
                fill="none"
                xmlns="http://www.w3.org/2000/svg"
              >
                <g id="ion:language">
