                  stroke-opacity="0.6"
                  stroke-width="5"></path>
              </g>
              <defs>
                <filter
                  id="filter0_b_563_251"
                  x="-24"
                  y="-24"
                  width="128"
                  height="128"
                  filterUnits="userSpaceOnUse"
                  color-interpolation-filters="sRGB"
                >
                  <feFlood flood-opacity="0" result="BackgroundImageFix"
                  ></feFlood>
                  <feGaussianBlur in="BackgroundImageFix" stdDeviation="12"
                  ></feGaussianBlur>
